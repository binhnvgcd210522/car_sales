{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Supplier Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for supplier in suppliers %}
                <tr>
                    <th scope="row">{{ supplier.id }}</th>
                    <td>{{ supplier.suppliername }}</td>
                    <td>
                        <a href="{{ path('supplier_details' , {'id' : supplier.id }) }}" class='btn btn-success'>View</a>
                        <a href="{{ path('supplier_edit' , {'id' : supplier.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('supplier_delete' , {'id' : supplier.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('supplier_create') }}"class="btn btn-primary" >Create</a></li>
        </ul>
    </div><!--/.nav-collapse -->
{% endblock %}